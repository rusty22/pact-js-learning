{
  "name": "pact",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:provider": "cross-env PORT=3001 node provider/provider-service.js",
    "test:web:consumer": "jest consumer-web/consumer-contract.glen.spec.js",
    "publish:pact": "pact-broker publish ./pacts --consumer-app-version=$GITHUB_SHA --branch=$GITHUB_BRANCH --tag=main --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN",
    "test:provider": "jest provider/provider-contract-glen.spec.js --testTimeout=20000",
    "start:graphql:server": "concurrently \"node graphql/provider/graphql-server.js\" \"npm run start:provider\"",
    "test:graphql:consumer": "jest graphql/consumer/graphql-client-contract.glen.spec.js",
    "test:graphql:provider": "concurrently \"npm run start:graphql:server\" \"jest graphql/provider/graphql-server-contract-glen.spec.js --testTimeout=20000\" --kill-others --success first",
    "start:kafka": "docker compose -f ./events/kafka-cluster.yml up -d",
    "produce:kafka:message": "node events/event-producer/index.js",
    "consume:kafka:message": "node events/consumer-event/server.js",
    "test:event:consumer": "jest ./events/consumer-event/src/movies/movie.handler.pact.glen.test.js",
    "test:event:producer": "jest --testTimeout 30000 ./events/event-producer/src/movie.event.pact.glen.test.js",
    "can:i:deploy:provider": "cross-env npx pact-broker can-i-deploy --pacticipant MoviesAPI --version=$GITHUB_SHA --to-environment production --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN",
    "can:i:deploy:graphql:provider": "cross-env npx pact-broker can-i-deploy --pacticipant=GraphQLProvider --version=$GITHUB_SHA --to=production --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN",
    "can:i:deploy:consumer": "cross-env npx pact-broker can-i-deploy --pacticipant WebConsumer --version=$GITHUB_SHA --to-environment production --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN  --retry-while-unknown=10",
    "can:i:deploy:graphql:consumer": "cross-env npx pact-broker can-i-deploy --pacticipant GraphQLConsumer --version=$GITHUB_SHA --to-environment production --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN",
    "record:provider:deployment": "cross-env npx pact-broker record-deployment --pacticipant MoviesAPI --version=$GITHUB_SHA --environment=production --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN",
    "record:graphql:provider:deployment": "cross-env npx pact-broker record-deployment --pacticipant=GraphQLProvider --version=$GITHUB_SHA --environment=production --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN",
    "record:web:consumer:deployment": "cross-env npx pact-broker record-deployment --pacticipant=WebConsumer --version=$GITHUB_SHA --environment=production --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN",
    "record:graphql:consumer:deployment": "cross-env npx pact-broker record-deployment --pacticipant=GraphQLConsumer --version=$GITHUB_SHA --environment=production --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN",
    "start:bi:web": "node consumer-bi-directional/index.js",
    "bi:consumer:cy:run": "cypress run --spec 'consumer-bi-directional/cypress/e2e/movies.cy.js'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "3.8.8",
    "@apollo/datasource-rest": "6.2.2",
    "@apollo/server": "4.9.5",
    "@pact-foundation/pact-cli": "^16.1.2",
    "@smartbear/mcp": "^0.5.0",
    "axios": "1.5.1",
    "cors": "2.8.5",
    "express": "4.18.2",
    "graphql": "16.8.1",
    "graphql-tag": "2.12.6",
    "joi": "17.10.2",
    "kafkajs": "^2.2.4",
    "react": "18.2.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@pact-foundation/pact": "15.0.1",
    "@pactflow/pact-cypress-adapter": "1.3.0",
    "concurrently": "^9.2.1",
    "cross-env": "7.0.3",
    "cypress": "13.7.3",
    "dredd": "14.1.0",
    "jest": "29.7.0",
    "newman": "6.1.2",
    "supertest": "6.3.4"
  }
}
